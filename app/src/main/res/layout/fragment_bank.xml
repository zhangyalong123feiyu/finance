<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include layout="@layout/titlebar"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <com.bibinet.finance.builder.PieView
                android:id="@+id/datapieview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="总额度100万"
                android:textColor="@color/black"
                android:textSize="15sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="下面当前额度的近期情况"
                android:textColor="@color/black"
                android:textSize="13sp"
                />
            <TextView
                android:id="@+id/canusemoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="已用额度:20万"
                android:drawablePadding="10dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@mipmap/mycolor_"
                android:textColor="@color/black"
                android:textSize="13sp"
                />
            <TextView
                android:id="@+id/usedmoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="可用额度:80万"
                android:layout_marginTop="10dp"
                android:drawablePadding="10dp"
                android:drawableLeft="@mipmap/mycolor_"
                android:textColor="@color/black"
                android:textSize="13sp"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@color/lightgray"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待处理保函量"
                />
            <TextView
                android:id="@+id/todopro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000万"
                />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="处理中的保函量"
                />
            <TextView
                android:id="@+id/doingpro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1200万"
                />
        </LinearLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/bankproviewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
